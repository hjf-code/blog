{
	"editor.formatOnSave": true,
	// 通过制表控制符缩进
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"prettier.printWidth": 100,
	"prettier.endOfLine": "crlf",
	"prettier.singleQuote": true,
	"prettier.tabWidth": 4,
	"prettier.useEditorConfig": false,
	"prettier.useTabs": true,
	"files.eol": "\r\n",
	"markdownlint.config": {
		"default": true,
		"no-hard-tabs": false,
		"MD007": { "indent": 4 }
	},
	"[markdown]": {
		// markdown文件的格式化方式
		"editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
	},
	"[typescript]": {
		// ts文件的格式化方式
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		// json文件的格式化方式
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[scss]": {
		// scss文件的格式化方式
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	// 拼写检测库中增加特定单词
	"cSpell.words": [
		"fontawesome",
		"Gitee",
		"vuepress",
		"webfonts",
		"fonticons",
		"vuejs",
		"darkmode",
		"codetabs",
		"echarts",
		"lazyload",
		"katex",
		"slidestart",
		"slideend"
	]
}

